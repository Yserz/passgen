{
  "env": {
    "jest/globals": true
  },
  "extends": ["./package/eslint-config/eslintrc.json", "plugin:jest/recommended"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/typedef": "off",
        "no-unused-vars": "off"
      }
    }
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["jest"],
  "rules": {
    "id-length": "off",
    "no-dupe-class-members": "off",
    "no-magic-numbers": "off",
    "valid-jsdoc": "off"
  }
}
